{
  "name": "my-project",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @my-project/site1 run build:server && pnpm --sequential -r build",
    "dev:site1": "pnpm --filter @my-project/site1 dev",
    "dev:site2": "pnpm --filter @my-project/site2 dev",
    "auth:start": "dotenv -e .env -- pnpm --filter @my-project/auth start",
    "prisma:site1": "dotenv -e .env -- pnpm --filter @my-project/site1 prisma",
    "prisma:site2": "dotenv -e .env -- pnpm --filter @my-project/site2 prisma",
    "prisma:migrate:site1": "dotenv -e .env -- pnpm --filter @my-project/site1 prisma:migrate",
    "prisma:migrate:site2": "dotenv -e .env -- pnpm --filter @my-project/site2 prisma:migrate",
    "lint": "pnpm --sequential -r lint"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "typescript": "^5.9.2"
  }
}