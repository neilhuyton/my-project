{
  "name": "@my-project/auth",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "dotenv -e ../../.env -- tsc && esbuild src/functions/trpc.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/functions/trpc.js --external:@my-project/site1/prisma/client --external:@my-project/site2/prisma/client && rm -f dist/functions/*.d.ts dist/functions/*.map",
    "start": "dotenv -e ../../.env -- netlify functions:serve --port 8888 --functions dist/functions",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@netlify/functions": "^2.8.2",
    "@trpc/server": "^11.5.1",
    "zod": "^3.24.0",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@my-project/site1": "workspace:*",
    "@my-project/site2": "workspace:*",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.8.1",
    "dotenv-cli": "^7.4.2"
  },
  "main": "./dist/router.js",
  "types": "./dist/types/router.d.ts",
  "exports": {
    ".": {
      "import": "./dist/router.js",
      "types": "./dist/types/router.d.ts"
    },
    "./*": {
      "import": "./dist/types/*",
      "types": "./dist/types/*"
    }
  }
}