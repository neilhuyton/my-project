{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": false,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "types": ["node", "@netlify/functions"],
    "baseUrl": ".",
    "paths": {
      "@my-project/site1/prisma/client": ["../site1/prisma/client/index.d.ts"],
      "@my-project/site1/prisma/client/*": ["../site1/prisma/client/*"],
      "@my-project/site1/serverContext": ["../site1/dist/serverContext.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../site1/tsconfig.server.json" }]
}