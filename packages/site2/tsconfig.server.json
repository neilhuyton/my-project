{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": false,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@my-project/site2/prisma/client": ["./prisma/client/index.d.ts"],
      "@my-project/site2/prisma/client/*": ["./prisma/client/*"]
    }
  },
  "include": ["src/prisma.ts"],
  "exclude": ["dist", "node_modules"]
}
