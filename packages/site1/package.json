{
  "name": "@my-project/site1",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @my-project/auth build && pnpm --filter @my-project/ui build && dotenv -e ../../.env -- sh -c 'DATABASE_URL=$DATABASE_URL_SITE1 tsc -p tsconfig.json --noEmitOnError false && tsc -p tsconfig.server.json --noEmitOnError false && vite build && rm -f *.tsbuildinfo && mkdir -p .netlify/functions-internal && cp ../auth/dist/functions/trpc.js .netlify/functions-internal/trpc.js'",
    "dev": "vite",
    "start": "vite --host",
    "lint": "eslint . --ext .ts,.tsx",
    "prisma": "dotenv -e ../../.env -- sh -c 'PRISMA_CLI_BINARY_TARGETS=rhel-openssl-3.0.x DATABASE_URL=$DATABASE_URL_SITE1 npx prisma generate && ls -l node_modules/.prisma/client/ || echo \"No binary in site1\"'"
  },
  "dependencies": {
    "@my-project/auth": "workspace:*",
    "@my-project/ui": "workspace:*",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.59.15",
    "@trpc/client": "^11.5.1",
    "@trpc/react-query": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.11.0",
    "prisma": "^5.22.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8"
  },
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./serverContext": {
      "import": "./dist/serverContext.js",
      "types": "./dist/serverContext.d.ts"
    },
    "./*": {
      "import": "./dist/*",
      "types": "./dist/*"
    }
  }
}