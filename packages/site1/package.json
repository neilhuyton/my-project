{
  "name": "@my-project/site1",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @my-project/api build && pnpm --filter @my-project/ui build && sh -c 'DATABASE_URL=$DATABASE_URL_SITE1 tsc -p tsconfig.json --noEmitOnError false && vite build && rm -f *.tsbuildinfo && mkdir -p .netlify/functions-internal && cp ../api/dist/functions/trpc.js .netlify/functions-internal/trpc.js'",
    "dev": "vite",
    "start": "vite --host",
    "lint": "eslint . --ext .ts,.tsx",
    "prisma": "sh -c 'PRISMA_CLI_BINARY_TARGETS=rhel-openssl-3.0.x,rhel-openssl-1.0.x PRISMA_LOG_QUERIES=true DATABASE_URL=$DATABASE_URL_SITE1 npx prisma generate --schema=prisma/schema.prisma && ls -l node_modules/.prisma/client/ || echo \"No binary in site1\"'"
  },
  "dependencies": {
    "@my-project/api": "workspace:*",
    "@my-project/ui": "workspace:*",
    "@prisma/client": "5.22.0",
    "@tanstack/react-query": "^5.59.15",
    "@tanstack/react-router": "^1.131.37",
    "@trpc/client": "^11.5.1",
    "@trpc/react-query": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^3.24.0",
    "zustand": "^5.0.0",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@tanstack/router-devtools": "^1.131.37",
    "@typescript-eslint/parser": "^8.8.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.11.0",
    "prisma": "5.22.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8"
  },
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./*": {
      "import": "./dist/*",
      "types": "./dist/*"
    }
  }
}
