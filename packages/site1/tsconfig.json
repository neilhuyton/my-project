{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["node", "@types/react", "@types/react-dom", "vite/client"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@my-project/server": ["../server/dist/router.d.ts"],
      "@my-project/server/*": ["../server/dist/*"],
      "@my-project/ui": ["../ui/dist/index.d.ts"],
      "@my-project/ui/*": ["../ui/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../server" }, { "path": "../ui" }]
}