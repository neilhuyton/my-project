// packages/site1/tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["node", "@types/react", "@types/react-dom", "vite/client"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": false,
    "paths": {
      "@my-project/ui": ["../ui/dist/index.d.ts"],
      "@my-project/ui/*": ["../ui/dist/*"],
      "@my-project/site1": ["./src"],
      "@my-project/site1/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../ui" }]
}