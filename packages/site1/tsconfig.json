{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "paths": {
      "@my-project/server/*": ["../server/src/*"],
      "@my-project/ui/*": ["../ui/dist/*"]
    },
    "noEmit": true
  }
}