{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": false,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "types": ["node", "@netlify/functions"],
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "paths": {
      "@my-project/site1/prisma/client": ["../site1/prisma/client/index.d.ts"],
      "@my-project/site1/prisma/client/*": ["../site1/prisma/client/*"]
    }
  },
  "include": ["src/**/*", "prisma/client/index.d.ts"],
  "exclude": ["dist", "node_modules", "prisma/*.prisma"],
  "compilerOptionsOverrides": [
    {
      "files": ["src/functions/*.ts"],
      "compilerOptions": {
        "declaration": false,
        "declarationMap": false
      }
    }
  ]
}