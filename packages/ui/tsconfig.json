// packages/ui/tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@my-project/auth": ["../../auth/src"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "__mocks__/**/*",
    "vitest.setup.ts",
    "vite.config.ts"
  ],
  "exclude": ["dist", "node_modules"],
  "references": []
}
