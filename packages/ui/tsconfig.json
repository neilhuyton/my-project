{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"], // Explicitly include all source files
  "exclude": ["dist", "node_modules"],
  "references": []
}
