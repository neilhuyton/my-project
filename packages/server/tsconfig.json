{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": false,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "types": ["node", "@netlify/functions"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
